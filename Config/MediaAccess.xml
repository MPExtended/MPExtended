<?xml version="1.0" encoding="utf-8"?>
<MediaAccess xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://mpextended.github.io/schema/config/MediaAccess/1">
  <DefaultPlugins>
    <TVShow>MP-TVSeries</TVShow>
    <Movie>Moving Pictures</Movie>
    <Music>MP MyMusic</Music>
    <Picture>FS Pictures</Picture>
    <Filesystem>MP Shares</Filesystem>
  </DefaultPlugins>
  
  <PluginConfiguration>
    <Plugin name="MP-TVSeries">
      <database type="File" displayname="Database Location">%ProgramData%\Team MediaPortal\MediaPortal\database\TVSeriesDatabase4.db3</database>
      <banner type="Folder" displayname="Banner Folder">%ProgramData%\Team MediaPortal\MediaPortal\thumbs\MPTVSeriesBanners</banner>
      <fanart type="Folder" displayname="Fanart Folder">%ProgramData%\Team MediaPortal\MediaPortal\thumbs\Fan Art</fanart>
    </Plugin>
    <Plugin name="MP MyVideo">
      <database type="File" displayname="Database Location">%ProgramData%\Team MediaPortal\MediaPortal\database\VideoDatabaseV5.db3</database>
     <cover type="Folder" displayname="Cover Folder">%ProgramData%\Team MediaPortal\MediaPortal\Thumbs\Videos</cover>
    </Plugin>
    <Plugin name="Moving Pictures">
      <database type="File" displayname="Database Location">%ProgramData%\Team MediaPortal\MediaPortal\database\movingpictures.db3</database>
    </Plugin>
    <Plugin name="MP MyMusic">
      <database type="File" displayname="Database Location">%ProgramData%\Team MediaPortal\MediaPortal\database\MusicDatabaseV12.db3</database>
      <cover type="Folder" displayname="Cover Folder">%ProgramData%\Team MediaPortal\MediaPortal\thumbs\Music</cover>
      <playlist type="Folder" displayname="Playlists Location">%mp-music-playlists%</playlist>
    </Plugin>
    <Plugin name="FS Pictures">
      <root type="Folder" displayname="Root Folder"></root>
    </Plugin>
    <Plugin name="mvCentral">
      <database type="File" displayname="Database Location">%ProgramData%\Team MediaPortal\MediaPortal\database\mvCentral.db3</database>
      <cover type="Folder" displayname="Cover Folder">%ProgramData%\Team MediaPortal\MediaPortal\Thumbs\mvCentral</cover>
    </Plugin>
    <Plugin name="FanartHandler">
      <database type="File" displayname="Database Location">%ProgramData%\Team MediaPortal\MediaPortal\database\FanartHandler.db3</database>
      <thumb type="Folder" displayname="Thumb Folder">%ProgramData%\Team MediaPortal\MediaPortal\Thumbs</thumb>
    </Plugin>
  </PluginConfiguration>
</MediaAccess>