@using MPExtended.Services.StreamingService.Interfaces
@model MPExtended.Services.TVAccessService.Interfaces.WebRecordingBasic
@{
    ViewBag.Title = Model.Title;
}

<h2>@Model.Title</h2>
<ul>
<li>@UIStrings.RecordedOn: @Model.StartTime.ToShortDateString()</li>
<li>@ViewBag.Quality</li>
<li>@Html.ActionLink(UIStrings.Play, "WatchRecording", new { id = Model.Id })</li>
<li>@Html.ActionLink(UIStrings.Download, "Download", "Stream", new { item = Model.Id, type = WebStreamMediaType.Recording }, new { })</li>
</ul>