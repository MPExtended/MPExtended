@model MPExtended.Applications.WebMediaPortal.Models.ProgramDetailsViewModel
@{
    ViewBag.Title = "ProgramDetails";
}

<h2>@Model.Title</h2>
<p>
    <strong>@Model.StartTime</strong> till <strong>@Model.EndTime</strong> on channel <strong>@Model.ChannelName</strong><br />
    @{if (@Model.IsScheduled)
      {
          @Html.ActionLink("Cancel schedule", "DeleteSchedule", "Schedule", new { programId = @Model.Id }, new { })
      }
      else
      {
          @Html.ActionLink("Schedule", "AddSchedule", "Schedule", new { programId = @Model.Id }, new { })
      }
    }
</p>
<p>
    @Model.Description
</p>

