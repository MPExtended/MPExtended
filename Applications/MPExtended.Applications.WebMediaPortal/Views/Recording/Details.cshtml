@using MPExtended.Services.Common.Interfaces
@model MPExtended.Services.TVAccessService.Interfaces.WebRecordingBasic
@{
    ViewBag.Title = Model.Title;
}

<h2>@Model.Title</h2>

<div class="imageColumn">
    <img src="@Url.Action("PreviewImage", new { id = @Model.Id, width = 300 })" width="300" alt="No image" />
</div>

<div class="dataColumn">
    <ul>
        <li>@UIStrings.RecordedOn: @Model.StartTime.ToShortDateString()</li>
        <li>@Model.Genre</li>
        <li>@ViewBag.Quality</li>
        <li>@Html.ActionLink(UIStrings.Play, "Watch", new { id = Model.Id })</li>
        <li>@Html.ActionLink(UIStrings.Download, "Download", "Stream", Skin.GetDownloadArguments(WebMediaType.Recording, Model.Id.ToString()), new { })</li>
    </ul>
</div>

<div class="textColumn">
    @Model.Description
</div>