@model MPExtended.Applications.WebMediaPortal.Models.HomeViewModel

@if (Model.Availability.TAS && Model.GetTodaysSchedules().Count() > 0)
{
    <h2>@UIStrings.TodaysSchedules</h2>
    <div>
        <ul>
            @foreach (var schedule in Model.GetTodaysSchedules())
            {
                <li>@schedule.Title - @schedule.StartTime.Value.ToShortTimeString() - @schedule.EndTime.Value.ToShortTimeString()</li>       
            }
        </ul>
    </div>
} 
