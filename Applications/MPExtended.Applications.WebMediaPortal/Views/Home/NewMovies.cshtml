@model IEnumerable<MovieViewModel>
           
@Html.Assets().AddViewStylesheet("Home/Index.css")

@if (ViewBag.Availability.Movies && Model.Count() > 0)
{
    <h2>@Html.ActionLink(UIStrings.LatestMovies, "NewMovies", "Home", new { count = 50 }, new { })</h2>
    <div class="dotted-line"></div>
    <div>
        @foreach (var movie in Model)
        {
            <div class="column">
                <div class="row">
                    <a href="@Url.Action("Details", "MovieLibrary", new { movie = movie.Id }, null)">
                        <img class="img" width="150" src="@Url.Action("Cover", "MovieLibrary", new { movie = movie.Id, width = 150 })" alt="No image" />
                    </a>
                </div>
                <div class="row">
                    @Html.ActionLink(movie.Movie.Title, "Details", "MovieLibrary", new { movie = movie.Id }, null)
                </div>
            </div>
        }
    </div>
}
