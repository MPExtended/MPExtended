@model IEnumerable<MPExtended.Services.MediaAccessService.Interfaces.TVShow.WebTVEpisodeDetailed>

@if (@Model != null && @Model.Count() > 0)
{
    <h2>@UIStrings.LatestEpisodes</h2>
    <div>
        @foreach (var episode in Model)
        {
            <div class="column">
                <div class="row">
                    @Html.ActionLink(episode.Show + " - " + episode.SeasonNumber + "x" + episode.EpisodeNumber, 
                        "Details", "TVShowsLibrary", new { episode = episode.Id }, null)
                </div>
                <div class="row">
                    <img class="img" src="@Url.Action("EpisodeImage", "TVShowsLibrary", new { episode = episode.Id })" alt="" />
                </div>
            </div>
        }
    </div>
}
