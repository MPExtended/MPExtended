@model IEnumerable<MPExtended.Services.TVAccessService.Interfaces.WebRecordingBasic>
           
@Html.Assets().AddViewStylesheet("Home/Index.css")

@if (ViewBag.Availability.TAS && Model.Count() > 0)
{
    <h2>@Html.ActionLink(UIStrings.LatestRecordings, "NewRecordings", "Home", new { count = 50 }, new { })</h2>
    <div class="dotted-line"></div>
    <div>
        @foreach (var recording in Model)
        {
            <div class="column">
                <div class="row">
                    <a href="@Url.Action("Recording", "Television", new { id = recording.Id })">
                        <img class="img" width="150" src="@Url.Action("PreviewImage", "Recording", new { id = recording.Id, width = 150 })" alt="No image" />
                    </a>
                </div>
                <div class="row">
                    @Html.ActionLink(recording.Title + " (" + recording.StartTime.ToShortDateString() + ")", "Details", "Recording", new { id = recording.Id }, new { })
                </div>
            </div>
        }
    </div>
}