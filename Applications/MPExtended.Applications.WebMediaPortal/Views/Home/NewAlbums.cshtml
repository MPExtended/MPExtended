@model IEnumerable<AlbumViewModel>
           
@Html.Assets().AddViewStylesheet("Home/Index.css")

@if (ViewBag.Availability.Music && Model.Count() > 0)
{
    <h2>@Html.ActionLink(UIStrings.LatestAlbums, "NewAlbums", "Home", new { count = 50 }, new { })</h2>
    <div class="dotted-line"></div>
    <div>
        @foreach (var album in Model)
        {
            <div class="column">
                <div class="row">
                    <a href="@Url.Action("Album", "MusicLibrary", new { album = album.Album.Id }, null)">
                        <img class="img" width="150" src="@Url.Action("AlbumImage", "MusicLibrary", new { album = album.Album.Id, width = 150 })" alt="No image" />
                    </a>
                </div>
                <div class="row">
                    @Html.ActionLink(album.Album.AlbumArtist + " - " + album.Album.Title, "Album", "MusicLibrary", new { album = album.Album.Id }, null)
                </div>
            </div>
        }
    </div>
}
