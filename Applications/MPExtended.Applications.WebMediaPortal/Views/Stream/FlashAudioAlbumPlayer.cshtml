@model AlbumPlayerViewModel

@Html.Assets().AddScript("~/Content/jwplayer/jwplayer.js")

<div id="mediaspace">
    @Html.Raw(UIStrings.InstallFlashPlayerToUseThisPlayer)
</div>

<script type='text/javascript'>
    jwplayer('mediaspace').setup({
        'flashplayer': '@Url.ContentLink("jwplayer/player.swf")',
        'controlbar': 'bottom',
        'width': '770',
        'height': '320',
        'playlist.position': 'right',
        'playlist.size': '320',
        'autostart': 'false',
        'skin': '@Url.ContentLink("jwplayer/whotube.zip")',
        'plugins': '',
		'stretching': 'uniform',
		'repeat': 'list',
        'playlist': [
                @foreach (var track in Model.Tracks.OrderBy(x => x.TrackNumber))
                {
                    <text>
                    { 'title': '@Ajax.JavaScriptStringEncode(track.Title)',
                      'image': '@Ajax.JavaScriptStringEncode(Url.Action("AlbumImage", "MusicLibrary", new { album = Model.Tracks.ElementAt(0).AlbumId }))',
                      'file': '@Ajax.JavaScriptStringEncode(Url.Action("MusicTrack", "Stream", new { item = track.Id, transcoder = Model.GetTranscoderForTrack(track), continuationId = Model.ContinuationId }))', 
                      'provider': 'sound',
                      'duration': '@track.Duration',
					  'description': '@Ajax.JavaScriptStringEncode(track.Album)',
                    },
                    </text>
                }
        ]
    });
</script>


