@model IEnumerable<MPExtended.Services.MediaAccessService.Interfaces.Music.WebMusicArtistBasic>
@{
	ViewBag.Title = UIStrings.Music;
}

<style type="text/css">
    .artistList
    {
        overflow: hidden;
        min-width: 1000px;
    }
    
    .artistList li
    {
        width: 250px;
        float: left;
        margin: 15px;
    }
</style>

<h2>@UIStrings.YourArtists</h2>
<ul class="artistList">
    @if (Model != null)
    {
        foreach (var artist in Model)
        {
            <li>@Html.ActionLink(artist.Title, "Albums", new { artist = artist.Id })</li>
        }
    }
</ul>
