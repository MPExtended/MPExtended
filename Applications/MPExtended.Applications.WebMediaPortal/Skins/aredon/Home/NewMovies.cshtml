@model MPExtended.Applications.WebMediaPortal.Models.HomeViewModel

@if (Model.Availability.TVShows)
{
    <h2>@UIStrings.LatestMovies</h2>
    <div>
        @foreach (var movie in Model.GetLastAddedMovies())
        {
            <div class="column">
                <div class="thumb_wrap">
				    <div class="thumb_title">
                        @Html.ActionLink(movie.Title, "Details", "MovieLibrary", new { movie = movie.Id }, null)
                    </div>
                    <a href="@Url.Action("Details", "MovieLibrary", new { movie = movie.Id })">
                        <img class="img" src="@Url.Action("Image", "MovieLibrary", new { movie = movie.Id, width = 222 })" alt="" border="0" />
                    </a>
                </div>
            </div>
        }
    </div>
}
