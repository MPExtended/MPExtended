<Page x:Class="MPExtended.Applications.ServiceConfigurator.Pages.TabWebMediaPortal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:strings="clr-namespace:MPExtended.Applications.ServiceConfigurator.Strings"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="560"
	Title="TabWebMediaPortal">
    <Grid>
        <GroupBox Header="WebMediaPortal" Height="274" HorizontalAlignment="Left" Margin="10,10,0,0" Name="gbServices" VerticalAlignment="Top" Width="538">
            <Grid Height="253">
                <TextBlock Height="19" Margin="12,6,0,0" Name="tbPort" Text="{x:Static strings:UI.ConfigureWebMPPort}" TextWrapping="Wrap" VerticalAlignment="Top" />
                
                <Label Content="{x:Static strings:UI.Port}" FontWeight="Bold" Height="28" HorizontalAlignment="Left" Margin="6,29,0,0" Name="lblPort" VerticalAlignment="Top" Width="80" />
                <TextBox Height="23" HorizontalAlignment="Left" IsEnabled="True" IsReadOnly="False" Margin="100,31,0,0" Name="txtPort" Text="8080" VerticalAlignment="Top" Width="158" />

                <CheckBox Content="{x:Static strings:UI.EnableHTTPS}" Height="16" HorizontalAlignment="Left" Margin="12,72,0,0" Name="cbHTTPS" VerticalAlignment="Top" Width="226" Checked="ChangeHTTPSCheckbox" Unchecked="ChangeHTTPSCheckbox"/>
                <Label Content="{x:Static strings:UI.HTTPSPort}" FontWeight="Bold" Height="28" HorizontalAlignment="Left" Margin="6,94,0,0" Name="lblHTTPSPort" VerticalAlignment="Top" Width="80" />
                <TextBox Height="23" HorizontalAlignment="Left" IsEnabled="True" IsReadOnly="False" Margin="100,96,0,0" Name="txtHTTPSPort" Text="8080" VerticalAlignment="Top" Width="158" LostFocus="txtHTTPSPort_LostFocus" />
                
                <Label Height="91" HorizontalAlignment="Left" Margin="6,125,6,0" Name="lblHTTPSDisclaimer" VerticalAlignment="Top">
                    <TextBlock Text="{x:Static strings:UI.HTTPSDisclaimer}" TextWrapping="WrapWithOverflow" />
                </Label>
            </Grid>
        </GroupBox>
    </Grid>
</Page>