<?xml version="1.0"?>
<configuration>
  <system.serviceModel>
    <services>
      <service behaviorConfiguration="serviceBehavior" name="MPExtended.Services.UserSessionService.UserSessionService">
        <host>
          <baseAddresses>
            <add baseAddress="net.pipe://localhost/MPExtended/UserSessionServiceImplementation"/>
          </baseAddresses>
        </host>
        <endpoint address="" binding="netNamedPipeBinding" bindingConfiguration="pipeBinding" contract="MPExtended.Services.UserSessionService.Interfaces.IUserSessionService"/>
       </service>
    </services>
    
    <bindings>
      <netNamedPipeBinding>
        <binding name="pipeBinding" receiveTimeout="infinite"></binding>
      </netNamedPipeBinding>
    </bindings>
    
    <behaviors>
      <serviceBehaviors>
        <behavior name="serviceBehavior">
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
  
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/></startup></configuration>
