@model MPExtended.Services.MediaAccessService.Interfaces.TVShow.WebTVEpisodeDetailed
@{
    ViewBag.Title = @Model.Title;
}
<style type="text/css">
    .column
    {
        float: left;
        margin-right: 10px;
    }
    .img
    {
        max-width: 300px;
    }
    .column subcolumn
    {
        max-width: 500px;
        margin-right: 20px;
    }
</style>
<h2>
    Details</h2>
<div class="column">
    <img class="img" src="@Url.Action("EpisodeImage", new { episode = @Model.Id })" alt="" />
</div>
<div class="column">
    <ul>
        <li>Written by:
            <ul>
                @foreach (string writer in Model.Writers)
                {
                    <li>@writer</li>
                }
            </ul>
        </li>

        <li>Guest starring:
            <ul>
                @foreach (string guestStar in Model.GuestStars)
                {
                    <li>@guestStar</li>
                }
            </ul>        
        </li>

        <li>Aired @Model.FirstAired.ToShortDateString()</li>
        @if(ViewBag.ShowPlay) {
            <li>@Html.ActionLink("Play", "Play", new { episode = @Model.Id })</li>
        }
    </ul>
</div>
<div class="subcolumn">
    @Model.Summary
</div>
