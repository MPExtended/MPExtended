<?xml version="1.0"?>
<configuration>
  <system.serviceModel>
    <services>
      <service name="MPExtended.Services.TVAccessService.TVAccessService" behaviorConfiguration="TVServiceBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="net.pipe://localhost/MPExtended/TVAccessService"/>
            <add baseAddress="http://localhost:4321/MPExtended/TVAccessService"/>
          </baseAddresses>
        </host>
        <endpoint name="NetPipeEndpoint" address="" binding="netNamedPipeBinding" bindingConfiguration="netNamedPipeBindingConfiguration" contract="MPExtended.Services.TVAccessService.Interfaces.ITVAccessService"/>
        <endpoint name="SoapEndpoint" address="" binding="basicHttpBinding" contract="MPExtended.Services.TVAccessService.Interfaces.ITVAccessService"/>
        <endpoint name="JsonEndpoint" address="json" binding="webHttpBinding" contract="MPExtended.Services.TVAccessService.Interfaces.ITVAccessService" bindingConfiguration="general" />
        <endpoint name="MetadataEndpoint" address="mex" binding="mexHttpBinding" contract="IMetadataExchange"/>
      </service>
    </services>

    <behaviors>
      <serviceBehaviors>
        <behavior name="TVServiceBehavior">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="true"/>
          <serviceCredentials>
            <userNameAuthentication
              userNamePasswordValidationMode="Custom"
              customUserNamePasswordValidatorType="MPExtended.Services.TVAccessService.WcfUsernameValidator,MPExtended.Services.TVAccessService"/>
          </serviceCredentials>
        </behavior>
      </serviceBehaviors>
    </behaviors>

    <bindings>
      <netNamedPipeBinding>
        <binding name="netNamedPipeBindingConfiguration" receiveTimeout="infinite"/>
      </netNamedPipeBinding>
      <basicHttpBinding>
        <binding name="general" sendTimeout="00:15:00" transferMode="Buffered">
          <readerQuotas maxArrayLength="2147483647" maxStringContentLength="2147483647"/>
          <security mode="TransportCredentialOnly">
            <transport clientCredentialType="Basic"/>
          </security>
        </binding>
      </basicHttpBinding>
      <webHttpBinding>
        <binding name="general" sendTimeout="00:15:00" transferMode="Buffered">
          <readerQuotas maxArrayLength="2147483647" maxStringContentLength="2147483647"/>
          <security mode="TransportCredentialOnly">
            <transport clientCredentialType="Basic"/>
          </security>
        </binding>
        <binding name="streaming" sendTimeout="00:40:00" openTimeout="00:40:00" transferMode="StreamedResponse">
          <readerQuotas maxArrayLength="2147483647" maxStringContentLength="2147483647"/>
        </binding>
      </webHttpBinding>
    </bindings>

  </system.serviceModel>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
</configuration>
