      </Component>
    </DirectoryRef>
  </Fragment>
  <Fragment>
    <ComponentGroup Id="Component_TAS">
      <ComponentRef Id="Component_TAS_Binaries"/>
      <ComponentRef Id="Component_TAS_Registry"/>
    </ComponentGroup>
  </Fragment>

